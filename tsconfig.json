{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",    
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "resolveJsonModule": true
  },
  "include": ["src"]
}